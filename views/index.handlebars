<div class="row">
	<div class="col-md-12 text-center">
		<h1>Welcome to</h1>
		<img id="bigBurger" src="../assets/img/burger.png">
		<h1>"Eatta Burger"</h1>
	</div>
</div>
<hr>
<div class="row">
	<div class="col-md-4">
		<h3>Burgers To Eat</h3>
		<ul class="list-group" id="burgerList">
			{{#each burgers}}
				{{#unless this.devoured}}
				<li class="list-group-item to-eat">
					<p>{{this.burger_name}}
					<button class="btn btn-danger float-right devour" data-id="{{this.id}}">Eat This Burger!</button></p>
				</li>
				{{/unless}}
			{{/each}}
		</ul>
	</div>
	<div class="col-md-4">
		<h3>Submit a Burger</h3>
		<form class="newBurger">
			<div class="form-group">
				<label for="newBurger">Burger Name:</label>
				<input type="text" class="form-control" id="newBurger">
			</div>
			<button type="submit" class="btn btn-success btn-block">Add Burger!</button>
		</form>
	</div>
	<div class="col-md-4">
		<h3>Burgers Eaten</h3>
		<ul class="list-group">
			{{#each burgers}}
				{{#if this.devoured}}
				<li class="list-group-item eated">
					<p>{{this.burger_name}}</p><small class="float-right">Eaten: {{this.date}}</small>
				</li>
				{{/if}}
			{{/each}}
		</ul>
	</div>
</div>